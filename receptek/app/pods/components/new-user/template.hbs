{{log error}}
<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{if users.surname "has-error"}}">
            <label for="surname" class="col-lg-2 control-label">Vezetéknév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="vnev" name="vnev" type="text" value="{{user.surname}}">
                <div class="help-block">{{users.surname}}</div>
            </div>
        </div>
        <div class="form-group {{if users.forename "has-error"}}">
            <label for="forename" class="col-lg-2 control-label">Keresztnév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="knev" name="knev" value="{{user.forename}}">
                <div class="help-block">{{users.forename}}</div>
            </div>
        </div>
        <div class="form-group {{if users.username "has-error"}}">
            <label for="username" class="col-lg-2 control-label">Felhasználónév</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="fnev" name="fnev" value="{{user.username}}">
                <div class="help-block">{{users.username}}</div>
            </div>
        </div>
        <div class="form-group {{if users.password "has-error"}}">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="jelszo" name="jelszo" value="{{user.password}}">
                <div class="help-block">{{users.password}}</div>
            </div>
        </div>
        <div class="form-group {{if users.email "has-error"}}">
            <label for="email" class="col-lg-2 control-label">Email cím</label>
            <div class="col-lg-10">
                <input class="form-control" type="text" id="emailcim" name="emailcim" value="{{user.email}}">
                <div class="help-block">{{users.email}}</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Mégse</button>
                <button type="submit" class="btn btn-primary" {{action "submit"}}>Megerősít</button>
            </div>
        </div>
    </fieldset>
</form>